              <input type="number" step="0.01" name="precio" placeholder="Precio" class="form-control">
            </div>

            <div class="form-group mb-2">
            <input type="number" name="inventario" placeholder="Inventario" class="form-control">
            </div>
            
            <div class="form-group mb-2">
              <textarea name="description" placeholder="DescripciÃ²n" class="form-control"></textarea>
            </div>
            <div class="form-group mb-2">
